@using Telerik.Blazor.Components

<TelerikGrid Data="@projectReportData" Height="400px"
             Pageable="true" Sortable="true" Groupable="true"
             FilterMode="Telerik.Blazor.GridFilterMode.FilterRow"
             Resizable="true" Reorderable="true"
             OnRowClick="@RowClick">
    <GridColumns>
        <GridColumn Field="@(nameof(BreakpointManagement.Shared.Models.BreakpointProjectReport.Project))" Title="Project" Width="120px" />
        <GridColumn Field="@(nameof(BreakpointManagement.Shared.Models.BreakpointProjectReport.Comment))" Title="Comment" Groupable="false" />
    </GridColumns>
</TelerikGrid>
