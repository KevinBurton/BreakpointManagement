@using Telerik.Blazor.Components

<TelerikGrid Data="@groupingReportList" Height="400px"
             Pageable="true" Sortable="true" Groupable="true"
             FilterMode="Telerik.Blazor.GridFilterMode.FilterRow"
             Resizable="true" Reorderable="true"
             OnRowClick="@RowClick">
    <GridColumns>
        <GridColumn Field="@(nameof(BreakpointManagement.Shared.Models.BreakpointGroupingReport.Standard))" Title="Standard" Width="120px" />
        <GridColumn Field="@(nameof(BreakpointManagement.Shared.Models.BreakpointGroupingReport.Group))" Title="Group" Groupable="false" />
        <GridColumn Field="@(nameof(BreakpointManagement.Shared.Models.BreakpointGroupingReport.Organism))" Title="Organism" />
    </GridColumns>
</TelerikGrid>
